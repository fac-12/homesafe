<section class="login-parent">
    <form class="login-parent__form" action="/login_parent" method="post">
      <h1 class="login-parent__form__heading"> Parent Log in</h1>
      <label for="parent_login_email_input" class="login-parent__form__labels">Email<input type="email" name="parent_email_login" id="parent_login_email_input" class="login-parent__form__inputs" required> </label>
      <label for="parent_login_password_input" class="login-parent__form__labels">Password <input type="password" name="parent_password_login" id="parent_login_password_input" class="login-parent__form__inputs" required> </label>
      <label for="parent_login_submit" class="login-parent__form__inputs"><input type="submit" value="Submit" id="parent_login_submit" class="login-parent__form__submit"> </label>
    </form>
    <p><a href="/">Forgot your password?</a></p>

    <form class="login-parent__form__back_button" action="/" method="post">
      <button class="login_parent__buttons__back" type="button" name="button">Go back</button>
    </form>
  </section>
