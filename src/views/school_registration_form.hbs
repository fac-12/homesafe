{{> header_banner}}
{{> flash_messages}}

<section class="school-registration">
  <form class="school-registration__form" action="/register_school" method="post">
    <h3 class="login-registeration__form__heading">School Register</h3>
    <label class="school-registration__labels" for="school-registration-name"><input type="text" name="name" id="school-registration-name" class="school-registration__inputs" placeholder="Name" required></label>
    <label class="school-registration__labels" for="school-registration-email"><input type="email" name="email" id="school-registration-email" class="school-registration__inputs" placeholder="Email" required></label>
    <label class="school-registration__labels" for="school-registration-password"><input type="password" name="password" id="school-registration-password" class="school-registration__inputs" placeholder="Password" required></label>
    <label class="school-registration__labels" for="school-registration-confirm-password"><input type="password" id="school-registration-confirm-password" class="school-registration__inputs" placeholder="Confirm password" required></label>
    <label for="school-registration-submit" class="school-registration__labels"> <input type="submit" value="Register" id="school-registration-submit" class="school-registration__submit"> </label>
  </form>

<a href="/user_select_register" class="login_registration__buttons__back">Go back</a>
</section>
