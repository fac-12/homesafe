<h1>School Register</h1>

<section>
  {{#if success}}
  <p>{{success}}</p>
  {{else if error_msg}}
  <p>{{error_msg}}</p>
  {{/if}}
</section>

<section class="school-registration">
<form class="school-registration__form" action="/register_school" method="post">
<label class="school-registration__labels" for="school-registration-name">Name<input type="text" name="name" id="school-registration-name" class="school-registration__inputs" required></label>
<label class="school-registration__labels" for="school-registration-email">Email<input type="email" name="email" id="school-registration-email" class="school-registration__inputs" required></label>
<label class="school-registration__labels" for="school-registration-password">Password<input type="text" name="password" id="school-registration-password" class="school-registration__inputs" required></label>
<label for="school-registration-submit" class="school-registration__labels"> <input type="submit" value="Register" id="school-registration-submit" class="school-registration__inputs"> </label>
</form>
</section>
